mixin addedit
	.flex-grow-1.d-none.flex-column.ms-4(data-bind="class: addEditClass")
		h1(data-bind="text: addEditLabel")
		.control-group.d-50.mt-2
			label(for="title") Title
			input#title.form-control(type="text" data-bind="value: title")
		flex-grow-1.control-group.mt-2
			label(for="ingredients") Ingredients
			textarea#ingredients.form-control.d-50(data-bind="value: ingredients")
		flex-grow-1.control-group.mt-2
			label(for="steps") Steps
			textarea#steps.form-control.d-50(data-bind="value: steps")
		flex-grow-1.control-group.mt-2
			label(for="notes") Notes
			textarea#notes.form-control.d-50(data-bind="value: notes")
		.mt-3
			button.btn.btn-secondary(data-bind="click: cancelAddEdit") Cancel
			button.btn.btn-primary.ms-2(data-bind="click: addEditRecipe") Save
